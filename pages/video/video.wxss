.container {
  width: 100%;
  height: 100%;
}

.header {
  display: flex;
  margin: 10rpx 20rpx;
}

.header image {
  width: 60rpx;
  height: 60rpx;

}

.header .search {
  border: 1rpx solid #eee;
  flex: 1 1 auto;
  font-size: 26rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: azure;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.5);
  margin: 0 10rpx;
}

.nav-scroll {
  display: flex;
  white-space: nowrap;
}

.navItem {
  padding: 10rpx 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;

}

.active {
  border-bottom: 1rpx solid red;
}